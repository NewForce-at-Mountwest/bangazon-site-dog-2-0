@model IEnumerable<BangazonSite.Models.ProductType>

@{
    ViewData["Title"] = "Index";
}

<h1>All Product Categories</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Category
            </th>
            
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
                
            </td>
            <td>
                @*Show quantity here*@
            </td>
        </tr>
}
    </tbody>
</table>
